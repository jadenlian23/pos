  ########firs window  login 
<Log_in>:
  name:"log_in"
  GridLayout:
    rows:3
    cols:2
    size_hint:None,None
    pos:200,250
    Label:
      size_hint:None,None
      text:"USERNAME"
      bold:True
      size:"200dp","40dp"
    TextInput:
      size_hint:None,None
      multiline:False
      size:"250dp","40dp"
    Label:
      text:"PASSWORD"
      bold:True
      size_hint:None,None
      size:"200dp","40dp"

    TextInput:
      size_hint:None,None
      multiline:False
      size:"250dp","40dp"
      password:True
    Button:
      size_hint:None,None
      text:"LOG IN"
      size:"100dp","50dp"
      pos:100,200
      on_release:
        app.root.current="main_screen"
        root.manager.transition.direction="left"


