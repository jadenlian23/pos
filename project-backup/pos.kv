#################### create users
<Create_Users>:
  name:"create_users"
  GridLayout:
    rows:2
    cols:2
    Label:
      size_hint:None,None
      size:"150dp","30dp"
      text:"AGREGAR USUARIO"
      bold:True
    Button:
      size_hint:None,None
      size:"70dp","30dp"
      background_color:(1,0,0,1)
      text:"SALIR"
      on_release:
        app.root.current="users"
        root.manager.transition.direction="down"

    GridLayout:
      cols:1
      rows:2
      Image:
        source: "me.jpg"
        allow_stretch:True
        keep_ratio:False
     
      GridLayout:
        size_hint:None,None
        size:root.width,"200dp"
        rows:6
        cols:2
        Label:
          text:"NOMBRE"
        TextInput:
          multiline:False
        Label:
          text:"CONTRASENA"
        TextInput:
          multiline:False
          password:True
               #privilleges
        Label:
          text:"CONTRASENA"
        TextInput:
          multiline:False
          password:True



        Label:
          text:"PRIVILEGIOS"
        GridLayout:
          cols:4
          Label:
            text:"ADMIN"
          CheckBox:
            on_active:root.checkbox_click(self,self.active)
          Label:
            text:"EMPLEADO"
          CheckBox:
               #end of privilleges
        Label:
          text:"precio"
        TextInput:
          multiline:False



        Button:
          text:"AGREGAR"







